<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewEvents"
    android:background="#181C32">

    <Button
        android:id="@+id/filterEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="298dp"
        android:text="Category"
        android:onClick="filterEventsByCategory"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEvents"
        android:layout_width="401dp"
        android:layout_height="689dp"
        android:layout_below="@+id/filterEvents"
        android:layout_marginTop="-6dp"
        android:background="#181C32" />


</RelativeLayout>